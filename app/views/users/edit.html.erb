
<div class="col-md-4"></div>
<div class="col-md-4 center-block">
  <h1>修改密码</h1>
  <p>请妥善保管您的新密码</p>
  <%= form_tag '/users/changepwd', method: "post" do %>
    <div class="form-group">
        <label>原密码</label>
        <%= text_field_tag :password,"", type: "text", class: "form-control", placeholder: "原密码" %>
    </div>
    <div class="form-group">
        <label>新的密码</label>
        <%= text_field_tag :new_password,"", type: "text", class: "form-control", placeholder: "新的密码" %>
    </div>
    <div class="form-group">
        <label>重复新密码</label>
        <%= text_field_tag :new2_password,"", type: "text", class: "form-control", placeholder: "重复新密码" %>
    </div>
    <div class="form-group">
      <%= @error %>
    </div>
    <%= submit_tag "更新", class: "btn btn-primary" %>
    <%= link_to '取消', root_path, type: "button", class: "btn btn-default" %>
<% end %>
</div>
<div class="col-md-4"></div>