<div class="col-md-2"></div>
<div class="col-md-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">当前公钥</h3>
    </div>
    <div class="panel-body">
      <%= @public_key %>
    </div>
  </div>
  <%= form_tag('/settings/sshkey', method: 'post') do %>
    <%= submit_tag "re-generate", class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
    <%= link_to '回到首页', root_path, type: "button", class: "btn btn-default" %>
  <% end %>
</div>
<div class="col-md-2"></div>