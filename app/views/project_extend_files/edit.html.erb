
<% content_for :projects_slide_active do %>
  active
<% end %>

<%= form_for @file, url: {action: "update"} do |f| %>
  <%= f.text_field :project_id, class: "hidden" %>
  <div class="form-group">
    <label>文件名</label>
    <%= f.text_field :filename, type: "text", class: "form-control", placeholder: "文件名，包含路径" %>
  </div>
  <div class="form-group">
    <label>内容</label>
    <%= f.text_area :content, type: "text", class: "form-control", placeholder: "文件内容", rows: "6" %>
  </div>
  <%= f.submit "新建", class: "btn btn-primary" %>
  <%= link_to '取消', project_path(@file.project_id), type: "button", class: "btn btn-default" %>
<% end %>